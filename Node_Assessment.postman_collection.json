          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/users?search=admin&country=india",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["users"],
              "query": [
                { "key": "search", "value": "admin" },
