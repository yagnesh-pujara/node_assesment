        {
          "name": "List Users (Admin Only)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/users",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["users"]
            }
          }
        },
        {
